<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet"
            href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
            <link rel="stylesheet"
            href="{{ asset('bundles/dashboard/css/dashboard.css') }}">
    </head>
    <body>
<!--         {{ knp_menu_render('MenuBundle:Builder:mainMenu') }}  -->
        <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Wynd Terminal Dashboard</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          {% if app.user %}
            {{ knp_menu_render('MenuBundle:Builder:userMenu', {'currentClass': 'active'}) }} 

          {% else %}
            {{ knp_menu_render('MenuBundle:Builder:mainMenu', {'currentClass': 'active'}) }} 
          {% endif %}
        </div>
      </div>
    </nav>

    <!-- if user connected active the side bar -->

     {% if app.user %}
     <div class="col-sm-3 col-md-2 sidebar">
          {{ knp_menu_render('MenuBundle:Builder:sideBar', {'currentClass': 'active'}) }} 
        </div>
     {% endif %}
  

  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="container">
         
       {% block body %}{% endblock %}

    </div> 
  </div>  

        {% block javascripts %}
         <link rel="stylesheet"
            href="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}">
            <link rel="stylesheet"
            href="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}">
            {% endblock %}
    </body>
</html>
